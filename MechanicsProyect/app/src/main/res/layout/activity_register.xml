<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mRlView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/side_nav_bar"
    android:orientation="vertical"
    android:paddingTop="10sp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50sp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:orientation="vertical"
            android:paddingLeft="15sp"
            android:paddingRight="15sp">

            <Space
                android:layout_width="match_parent"
                android:layout_height="10sp" />

            <ImageView
                android:id="@+id/camara1"
                android:layout_width="90sp"
                android:layout_height="90sp"
                android:layout_below="@+id/textView5"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:background="@drawable/mechanic_usr" />

            <TextView
                android:id="@+id/txt_camara1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView3"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:textSize="10sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35sp"
                    android:background="@drawable/blanco_post_border_style"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/txt_nombre"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:background="@drawable/blanco_post_border_style"
                        android:focusableInTouchMode="true"
                        android:fontFamily="sans-serif"
                        android:hint="Nombre"
                        android:inputType="textAutoCorrect"
                        android:paddingLeft="5sp"
                        android:textColorHint="@color/black"
                        android:textStyle="normal" />

                </LinearLayout>


                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35sp"
                    android:background="@drawable/blanco_post_border_style"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/txt_apellido"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:background="@drawable/blanco_post_border_style"
                        android:focusableInTouchMode="true"
                        android:fontFamily="sans-serif"
                        android:hint="Apellido"
                        android:inputType="textAutoCorrect"
                        android:paddingLeft="5sp"
                        android:textColorHint="@color/black"
                        android:textStyle="normal" />

                </LinearLayout>


                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35sp"
                    android:background="@drawable/blanco_post_border_style"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/txt_celular"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:background="@drawable/blanco_post_border_style"
                        android:focusableInTouchMode="true"
                        android:fontFamily="sans-serif"
                        android:hint="Celular"
                        android:inputType="phone"
                        android:paddingLeft="5sp"
                        android:textColorHint="@color/black"
                        android:textStyle="normal" />

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10sp" />




                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="10sp"
                    android:text="----Datos del Ubicacion Mecanico----"
                    android:textColor="@color/white" />


                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35sp"
                    android:background="@drawable/blanco_post_border_style"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/txt_placa"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:background="@drawable/blanco_post_border_style"
                        android:focusableInTouchMode="true"
                        android:fontFamily="sans-serif"
                        android:hint="Nombre empresa"
                        android:inputType="text"
                        android:paddingLeft="5sp"
                        android:textColorHint="@color/black"
                        android:textStyle="normal" />

                </LinearLayout>


                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35sp"
                    android:background="@drawable/blanco_post_border_style"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/txt_modelo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:background="@drawable/blanco_post_border_style"
                        android:focusableInTouchMode="true"
                        android:fontFamily="sans-serif"
                        android:hint="Dirección"
                        android:inputType="text"
                        android:paddingLeft="5sp"
                        android:textColorHint="@color/black"
                        android:textStyle="normal" />

                </LinearLayout>


                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35sp"
                    android:background="@drawable/blanco_post_border_style"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/txt_tarjetadepropiedad"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:background="@drawable/blanco_post_border_style"
                        android:focusableInTouchMode="true"
                        android:fontFamily="sans-serif"
                        android:hint="Correo"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="5sp"
                        android:textColorHint="@color/black"
                        android:textStyle="normal" />

                </LinearLayout>


                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35sp"
                    android:background="@drawable/blanco_post_border_style"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/txt_passwor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:background="@drawable/blanco_post_border_style"
                        android:focusableInTouchMode="true"
                        android:fontFamily="sans-serif"
                        android:hint="Contraseña"
                        android:inputType="textPassword"
                        android:paddingLeft="5sp"
                        android:textColorHint="@color/black"
                        android:textStyle="normal" />

                </LinearLayout>


                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35sp"
                    android:background="@drawable/blanco_post_border_style"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/txt_passwor1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:background="@drawable/blanco_post_border_style"
                        android:focusableInTouchMode="true"
                        android:fontFamily="sans-serif"
                        android:hint="Comfirmar Contraseña"
                        android:inputType="textPassword"
                        android:paddingLeft="5sp"
                        android:textColorHint="@color/black"
                        android:textStyle="normal" />

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20sp" />


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="35sp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/blanco_post_border_style"
                    android:onClick="validar"
                    android:text="Registrarse"
                    android:textStyle="bold"
                    />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10sp" />


            </LinearLayout>

        </LinearLayout>
    </ScrollView>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorTransparente"
        android:gravity="center"
        android:inputType="textCapCharacters"
        android:onClick="terminos"
        android:text="Terminos y condidiones"
        android:textColor="@color/white"
        android:textSize="16sp" />

</RelativeLayout>